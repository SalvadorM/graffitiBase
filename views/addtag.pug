extends layout

block content 
  h1.text-center Enter tag
  #Con.container
    form.text-center.centered(method='POST', action='/tag/add', enctype='multipart/form-data')
     .form-group
       input.form-control.text-center(name='tagname',type='text', placeholder="Tag Name")
     .form-group
       .input-group.card
         img.card-img(src="", id="showImage")   
         input#file.custome-file-input(name='image', type='file')
     .form-group
       input.form-control.text-center(name='description', type='text', placeholder="Description")
     .form-group 
       input.form-control.text-center(name='location' type='text', placeholder='Location')
     button.btn.btn-light(type='submit',value='Submit') Tag It!
