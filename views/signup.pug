extends layout 

block content
  #Con.container
    h1.text-center Please Register 
      form#form-section.text-center.centered(method='POST', action='/users/signup')
        .form-group
          input.form-control(name='name', type='text', placeholder="First Last Name")
        .form-group
          input.form-control(name='email', type='text', placeholder="Enter email")
        .form-group
          input.form-control(name='username', type='text', placeholder="username")
        .form-group 
          input.form-control(name='password', type='password', placeholder='Password')
        .form-group 
          input.form-control(name='password2' type='password', placeholder='Repeat Pass')
        button.btn.btn-primary(type='submit',value='Submit') Register
          
      
